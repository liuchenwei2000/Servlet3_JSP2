<?xml version="1.0" encoding="UTF-8"?>

<!-- 
web-fragment.xml，这个文件被称为Web模块部署描述符。
它和web.xml文件类似，但只是用于部署、管理Web模块而已，并且可以多指定如下两个元素：
name 和 ordering
-->

<!-- 根元素是 web-fragment -->
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
	
	<!-- 用于指定该Web模块的名称。 -->
	<name>initsd</name>
	
	<servlet>
	   <servlet-name>servletdemo</servlet-name>
	   <servlet-class>servlet.ServletDemo</servlet-class>
	   <init-param>
	      <param-name>id</param-name>
	      <param-value>tom</param-value>
	   </init-param>
	   <init-param>
	      <param-name>password</param-name>
	      <param-value>ttoomm</param-value>
	   </init-param>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>servletdemo</servlet-name>
	   <url-pattern>/sdemo.do</url-pattern>
	</servlet-mapping>

    <!-- 用于指定加载该Web模块的相对顺序。 -->
	<ordering>
		<!-- 配置该Web模块必须位于哪些模块之前加载。 -->
		<before>
			<!-- 指定位于其他所有模块之前加载。 -->
			<others/>
		</before>
	</ordering>
</web-fragment>